<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Phoneshop servlet api training</display-name>

  <servlet>
    <servlet-name>productList</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>productList</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>enableDemoDataListener</param-name>
    <param-value>true</param-value>
  </context-param>
  <listener>
    <listener-class>com.es.phoneshop.web.DemoDataServletContextListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>product</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductDetailPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>product</servlet-name>
    <url-pattern>/products/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>cart</servlet-name>
    <servlet-class>com.es.phoneshop.web.CartPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>errorHandler</servlet-name>
    <servlet-class>com.es.phoneshop.web.ErrorHandlerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>errorHandler</servlet-name>
    <url-pattern>/error-handler</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteCartItem</servlet-name>
    <servlet-class>com.es.phoneshop.web.DeleteCartItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteCartItem</servlet-name>
    <url-pattern>/cart/deleteCartItem/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>miniCart</servlet-name>
    <servlet-class>com.es.phoneshop.web.MiniCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>miniCart</servlet-name>
    <url-pattern>/miniCart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>productListAddCartItem</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductListAddCartItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>productListAddCartItem</servlet-name>
    <url-pattern>/cart/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>checkoutPage</servlet-name>
     <servlet-class>com.es.phoneshop.web.CheckoutPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkoutPage</servlet-name>
    <url-pattern>/checkout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>orderOverview</servlet-name>
    <servlet-class>com.es.phoneshop.web.OrderOverviewPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>orderOverview</servlet-name>
    <url-pattern>/order/overview/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>dosFilter</filter-name>
    <filter-class>com.es.phoneshop.web.DosFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>dosFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <error-page>
    <exception-type>com.es.phoneshop.exception.NotFoundException</exception-type>
    <location>/error-handler</location>
  </error-page>

  <error-page>
    <exception-type>com.es.phoneshop.exception.OutOfStockException</exception-type>
    <location>/error-handler</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/error-handler</location>
  </error-page>

  <error-page>
    <error-code>429</error-code>
    <location>/error-handler</location>
  </error-page>

</web-app>
